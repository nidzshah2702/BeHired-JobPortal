@model BeHired.Models.Profile

@{
    ViewBag.Title = "ApplicantProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ApplicantProfile</h2>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<section class="inner-banner" style="backend:#242c36 url(https://via.placeholder.com/1920x600)no-repeat;">
    <div class="container">
        <div class="caption">
            <h2>Your Profile</h2>

        </div>
    </div>
</section>


<section class="profile-detail">
    <div class="container">
        <div class="col-md-12">
            <div class="row">
                <div class="basic-information">
                    <div class="col-md-3 col-sm-3">
                        <img src="/img/user.jpg" alt="" class="img-responsive">
                    </div>
                    <div class="col-md-9 col-sm-9">
                        <div class="profile-content">
                            <h2>@Html.DisplayFor(model => model.firstname)  @Html.DisplayFor(model => model.lastname)<span>  @Html.DisplayFor(model => model.currentpost)</span></h2>
                            <p> @Html.DisplayFor(model => model.currentcompany)</p>
                            <ul class="information">
                                <li><span>Name:</span>   @Html.DisplayFor(model => model.firstname)  @Html.DisplayFor(model => model.lastname)</li>
                                <li><span>Email:</span>@Html.DisplayFor(model => model.UserAccount.Email) </li>
                                <li><span>Mobile:</span>@Html.DisplayFor(model => model.UserAccount.contact) </li>
                                <li><span>Company:</span>Soft Techi Infoteck Pvt.</li>
                                <li><span>Date of Birth:</span>@Html.DisplayFor(model => model.UserAccount.date_of_birth) </li>
                            </ul>
                        </div>
                    </div>
                    <ul class="social">
                        <li><a href=@Model.facebooklink target="_blank" class="facebook"><i class="fa fa-facebook"></i>Facebook</a></li>
                        <li><a href=@Model.githublink class="google"><i class="fa fa-github"></i>GitHub</a></li>
                        <li><a href=@Model.twitterlink class="twitter"><i class="fa fa-twitter"></i>Twitter</a></li>
                        <li><a href="@Model.linkedinProfileLink" target="_blank" class="linkedin"><i class="fa fa-linkedin"></i>Linked In</a></li>
                        <li><a href=@Model.instagramlink class="instagram"><i class="fa fa-instagram"></i>Instagram</a></li>
                    </ul>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-user fa-fw"></i> About Me
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <p>  @Html.DisplayFor(model => model.aboutme)</p>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-leaf fa-fw"></i>Education Details:
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            @if (Model.EducationDetails == null)
                            {
                                <p>No education details added.</p>
                            }
                            else
                            {

                                foreach (var item in Model.EducationDetails)
                                {
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Certificate/DegreeName:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.certificate_degree_name)
                                        </dd>
                                        <dt>
                                            Major:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.major)
                                        </dd>
                                        <dt>
                                            University/Institute Name:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.institute_university_name)
                                        </dd>
                                        <dt>
                                            Start Date:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.starting_date)
                                        </dd>
                                        <dt>
                                            Completion Date:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.completion_date)
                                        </dd>
                                        <dt>
                                            Percentage:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.percentage)
                                        </dd>
                                        <dd>
                                            @Html.ActionLink("Edit", "EditEducationDetail", new { id = item.EducationDetailId })|@Html.ActionLink("Delete", "DeleteEducationDetail", new { id = item.EducationDetailId })

                                        </dd>
                                    </dl>



                                }
                            }

                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-leaf fa-fw"></i>Experience Details:
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            @if (Model.ExperienceDetails == null)
                            {
                                <p>No education details added.</p>
                            }
                            else
                            {

                                foreach (var item in Model.ExperienceDetails)
                                {
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Company Name:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.company_name)
                                        </dd>
                                        <dt>
                                            Job Title
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.job_title)
                                        </dd>
                                        <dt>
                                            Start Date
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.start_date)
                                        </dd>
                                        <dt>
                                            End Date:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.end_data)
                                        </dd>
                                        <dt>
                                            Location
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.job_location_state),@Html.DisplayFor(modelItem => item.job_location_country),

                                        </dd>
                                        <dt>
                                            Description
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.description)
                                        </dd>
                                        <dd>
                                            @Html.ActionLink("Edit", "EditExperienceDetail", new { id = item.ExperienceDetailId }) |
                                            @Html.ActionLink("Delete", "DeleteExperienceDetail", new { id = item.ExperienceDetailId })
                                        </dd>
                                    </dl>
                                }
                            }

                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-leaf fa-fw"></i>Skills:
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            @if (Model.Skills == null)
                            {
                                <p>No education details added.</p>
                            }
                            else
                            {

                                foreach (var item in Model.Skills)
                                {
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Skill:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(modelItem => item.skill_name) (@Html.DisplayFor(modelItem => item.skill_level))
                                        </dd>
                                        <dd>
                                            @Html.ActionLink("Edit", "EditSkill", new { id = item.SkillId }) |
                                            @Html.ActionLink("Delete", "DeleteSkill", new { id = item.SkillId })
                                        </dd>

                                    </dl>
                                }
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<p>
   
    @Html.ActionLink("Back to List", "ViewApplicants")
</p>
